{
  "name": "e-commerce dashbord",
  "dockerComposeFile": "../.docker/docker-compose.dev.yml",
  "workspaceFolder": "/home/user/app",
  "service": "ecommerce-dashboard",
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/app",
    "python.terminal.activateEnvironment": false,
    "terminal.integrated.defaultProfile.linux": "bash"
  },

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
      "plugins": "git git-flow F-Sy-H colorize zsh-autosuggestions zsh-completions",
      "omzPlugins": "https://github.com/z-shell/F-Sy-H https://github.com/zsh-users/zsh-autosuggestions https://github.com/zsh-users/zsh-completions"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "wmaurer.change-case",
        "vivaxy.vscode-conventional-commits",
        "pranaygp.vscode-css-peek",
        "dbaeumer.vscode-eslint",
        "mhutchie.git-graph",
        "MS-CEINTL.vscode-language-pack-pt-BR",
        "esbenp.prettier-vscode",
        "humao.rest-client",
        "redhat.vscode-yaml",
        "PKief.material-icon-theme"
      ]
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter"
  ],

  "remoteUser": "root"
}
